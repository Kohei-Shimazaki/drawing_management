<%= search_form_for @q, url: chat_team_path(@team) do |form| %>
  <div class="field">
    <%= form.label :user_id_in, "メンバー" %>
    <%= form.collection_select :user_id_eq, @users, :id, :name, include_blank: "指定なし" %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.search_field :content_cont %>
  </div>

  <%= form.submit "検索" %>
<% end %>
