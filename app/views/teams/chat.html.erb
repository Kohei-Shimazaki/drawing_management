<div class="jumbotron text-center">
  <h1 id="chat" data-team_id="<%= @team.id %>" data-current_user="<%= current_user.id %>">
    <%= @team.name %>チャットルーム
  </h1>
</div>


<div class="container">
  <% if @team.members.count == 1 %>
    <div class="alert alert-danger" role="alert">
      チャットするチームメンバーがいません。チーム画面からメンバーを追加して下さい
    </div>
  <% end %>
  <div class="search_chat_form mb-2">
    <%= render "search_chat_form" %>
  </div>
  <form class="form-group">
    <label>チャット:</label>
    <input type="text" data-behavior="team_speaker", placeholder="内容", class="form-control">
  </form>
  <div id="messages_<%= @team.id %>">
    <ul class="list-group">
      <%= render @messages %>
    </ul>
  </div>
  <%= paginate @messages %>
</div>
