<div class="jumbotron text-center">
  <h1 id="chat" data-team_id="<%= @team.id %>" data-user_id="<%= current_user.id %>">
    <%= @team.name %>チャットルーム
  </h1>
</div>

<div class="container">
  <form>
    <label>チャット:</label><br>
    <input type="text" data-behavior="team_speaker", placeholder="内容">
  </form>
  <div id="messages_<%= @team.id %>">
    <ul class="list-group">
      <%= render @messages %>
    </ul>
  </div>
</div>
