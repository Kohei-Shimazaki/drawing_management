<div class="jumbotron text-center">
  <h2><%= t("activerecord.models.team") %><%= t("crud.edit") %></h2>
</div>
<div class="container">
  <%= form_with(model: @team, local: true) do |form| %>
    <div class="form-group">
      <div class="field">
        <%= form.label :name, t("activerecord.attributes.team.name") %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="field">
        <%= form.label :icon, t("activerecord.attributes.team.icon") %>
        <%= form.file_field :icon, class: "form-control-file", id: "comment_file" %>
      </div>
      <div class="field">
        <%= form.label :profile, t("activerecord.attributes.team.profile") %>
        <%= form.text_area :profile, class: "form-control" %>
      </div>
      <div class="field">
        <%= form.hidden_field :owner_id, value: current_user.id %>
      </div>
      <%= form.submit t("submit") %>
    </div>
  <% end %>
</div>
