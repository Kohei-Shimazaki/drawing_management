<% if question.like_users.include?(current_user) %>
  <p>
    <%= link_to like_path(id: Like.find_by(user_id: current_user.id, question_id: question.id).id), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
    <%= question.likes.count %>
  </p>
<% else %>
  <p>
    <%=link_to likes_path(question_id: question.id), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
    <%= question.likes.count %>
  </p>
<% end %>
