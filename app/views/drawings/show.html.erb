<div class="jumbotron text-center">
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h4><%= @drawing.title %></h4>
      </div>
      <table class="table mb-0 table-bordered table-sm">
        <thead>
          <tr>
            <th><%= t("activerecord.attributes.drawing.drawing_number") %></th>
            <th><%= t("activerecord.attributes.customer.name") %></th>
            <th><%= t("activerecord.attributes.project.name") %></th>
            <th><%= t("activerecord.attributes.category.name") %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @drawing.drawing_number %></td>
            <td>D重工業</td>
            <td>沖縄BTG発電所</td>
            <td>
              基礎図 / 送風機
            </td>
          </tr>
        </tbody>
      </table>
      <div class="card-body text-left">
        <%= @drawing.explanation %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a href="#card1" class="nav-link active" data-toggle="tab">レビジョン</a>
        </li>
        <li class="nav-item">
          <a href="#card2" class="nav-link" data-toggle="tab">タスク</a>
        </li>
        <li class="nav-item">
          <a href="#card3" class="nav-link" data-toggle="tab">カレンダー</a>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div class="tab-content">
        <div id="card1" class="tab-pane active">
          <div class="field">
            <%= link_to t("activerecord.models.revision")+t("crud.new"),
                new_revision_path(revision_number: @drawing.revisions.count, drawing_id: @drawing.id) %>
          </div>
          <table class="table table-bordered">
            <%= render 'revisions/table_head' %>
            <tbody>
              <%= render partial: 'revisions/table_body', collection: sort_by_revision_number(@drawing.revisions), as: "revision" %>
            </tbody>
          </table>
        </div>
        <div id="card2", class="tab-pane">
          <div class="field">
            <%= link_to t("activerecord.models.task")+t("crud.new"),
                new_task_path(drawing_id: @drawing.id) %>
          </div>
          <table class="table table-bordered">
            <%= render 'tasks/table_head' %>
            <tbody>
              <%= render partial: 'tasks/table_body', collection: @drawing.tasks, as: "task" %>
            </tbody>
          </table>
        </div>
        <div id="card3", class="tab-pane">
          カレンダー予定
        </div>
      </div>
    </div>
  </div>
</div>
