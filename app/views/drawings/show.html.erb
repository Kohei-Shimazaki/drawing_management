<h2><%= t("activerecord.models.drawing") %><%= t("crud.show") %></h2>
<div class="field">
  <%= t("activerecord.attributes.drawing.title") %>:<%= @drawing.title %>
</div>
<div class="field">
  <%= t("activerecord.attributes.drawing.drawing_number") %>:<%= @drawing.drawing_number %>
</div>
<div class="field">
  <%= t("activerecord.attributes.drawing.explanation") %>:<%= @drawing.explanation %>
</div>


<div class="field">
  <%= link_to t("activerecord.models.revision")+t("crud.new"),
      new_revision_path(revision_number: @drawing.revisions.count, drawing_id: @drawing.id) %>
</div>
<table>
  <%= render 'revisions/table_head' %>
  <tbody>
    <%= render partial: 'revisions/table_body', collection: sort_by_revision_number(@drawing.revisions), as: "revision" %>
  </tbody>
</table>

<div class="field">
  <%= link_to t("activerecord.models.task")+t("crud.new"),
      new_task_path(drawing_id: @drawing.id) %>
</div>
<table>
  <%= render 'tasks/table_head' %>
  <tbody>
    <%= render partial: 'tasks/table_body', collection: @drawing.tasks, as: "task" %>
  </tbody>
</table>
