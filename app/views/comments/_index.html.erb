<ul class="list-group">
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-2">
            <% if question.task.staff.icon.attached? %>
              <%= image_tag question.task.staff.icon.variant(resize:'50x50').processed %><br>
            <% end %>
            <%= comment.user.name %>
          </div>
          <div class="col-sm-10">
            <div>
              <%= comment.content %>
              <span><%= link_to t("crud.destroy"), question_comment_path(comment.question_id, comment.id), method: :delete, remote: true,
                        data: { confirm: I18n.t("confirm.destroy")} %></span>
            </div>
            <div>
              <% if comment.attachment.attached? %>
                <%= link_to t("activerecord.attributes.comment.attachment"), comment.attachment %>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
  <%= paginate comments, params: { controller: 'questions', action: 'show', id: question.id } %>
</ul>
