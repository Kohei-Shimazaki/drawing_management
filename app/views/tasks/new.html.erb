<%= form_with(model: @task, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys.to_a, {} %>
  </div>
  <div class="field">
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline, {} %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit "登録" %>
<% end %>
