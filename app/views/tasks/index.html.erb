<h2>タスク一覧</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Content</th>
      <th colspan="3">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline %></td>
        <td><%= task.content %></td>
        <td><%= link_to "詳細", task_path(task.id) %></td>
        <td><%= link_to "編集", edit_task_path(task.id) %></td>
        <td><%= link_to "削除", task_path(task.id), method: :delete, data: {confirm: "本当に削除してよろしいですか？"}  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
