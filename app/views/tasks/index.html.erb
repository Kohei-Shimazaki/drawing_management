<h2><%= t("task.title.index") %></h2>
<table>
  <thead>
    <tr>
      <th><%= t("task.label.title") %></th>
      <th><%= t("task.label.status") %></th>
      <th><%= t("task.label.deadline") %></th>
      <th><%= t("task.label.content") %></th>
      <th colspan="3"><%= t("task.label.command") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= t("task.status.#{task.status}") %></td>
        <td><%= task.deadline %></td>
        <td><%= task.content %></td>
        <td><%= link_to t("task.link.show"), task_path(task.id) %></td>
        <td><%= link_to t("task.link.edit"), edit_task_path(task.id) %></td>
        <td><%= link_to t("task.link.destroy"), task_path(task.id), method: :delete, data: {confirm: "本当に削除してよろしいですか？"}  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
