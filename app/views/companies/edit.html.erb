<h2>
  <%= t('activerecord.models.company') %><%= t('crud.edit') %>
</h2>

<%= form_with(model: @company, local:true) do |form| %>
  <div class="form-group">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="field">
      <%= form.label :phone_number %>
      <%= form.telephone_field :phone_number, class: "form-control" %>
    </div>
    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <div class="field">
      <%= form.label :icon %>
      <%= form.file_field :icon, class: "form-control-file" %>
    </div>
    <div class="field">
      <%= form.label :overview %>
      <%= form.text_area :overview, class: "form-control" %>
    </div>
    <div class="actions">
      <%= form.submit t("submit") %>
    </div>
  </div>

<% end %>
