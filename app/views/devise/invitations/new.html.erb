<div class="jumbotron text-center">
  <h2>社員・客先・プロジェクト・カテゴリー登録</h2>
</div>

<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a href="#card1" class="nav-link active" data-toggle="tab" id="user_invitation">社員</a>
        </li>
        <li class="nav-item">
          <a href="#card2" class="nav-link" data-toggle="tab" id="customer_registration">客先</a>
        </li>
        <li class="nav-item">
          <a href="#card3" class="nav-link" data-toggle="tab" id="project_registration">プロジェクト</a>
        </li>
        <li class="nav-item">
          <a href="#card4" class="nav-link" data-toggle="tab" id="category_registration">カテゴリー</a>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div class="tab-content">
        <div id="card1" class="tab-pane active">
          <%= render "form" %>
        </div>

        <div id="card2", class="tab-pane">
          <div class="row">
            <div class="col-lg-4">
              <%= render partial: "customers/form", locals: { customer: @customer} %>
            </div>
            <div class="col-lg-8" id="customer_area">
              <%= render partial: "customers/index" %>
            </div>
          </div>
        </div>

        <div id="card3", class="tab-pane">
          <div class="row">
            <div class="col-lg-4" id="project_form">
              <%= render partial: "projects/form", locals: { project: @project } %>
            </div>
            <div class="col-lg-8" id="project_area">
              <%= render partial: "projects/index" %>
            </div>
          </div>
        </div>

        <div id="card4", class="tab-pane">
          <div class="row">
            <div class="col-lg-4">
              <%= render partial: "categories/form", locals: { category: @category } %>
            </div>
            <div class="col-lg-8" id="category_area">
              <%= render partial: "categories/index" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
