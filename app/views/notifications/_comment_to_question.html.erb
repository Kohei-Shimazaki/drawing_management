<% unless current_user == notification.subject.user %>
  <li class="list-group-item">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag notification.subject.user.icon.variant(resize:'50x50').processed, class: "small_icon" %>
      </div>
      <div class="col-md-10">
        <%= notification.subject.user.name %>さんが<br>
        <%= notification.subject.question.title %>にコメントしました！
      </div>
    </div>
  </li>
<% end %>
