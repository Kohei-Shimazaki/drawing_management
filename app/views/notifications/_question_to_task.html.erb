<%= link_to notification_notification_reads_path(notification), method: :post, class: "list_link" do %>
  <li class="list-group-item">
    <div class="row">
      <div class="col-md-2">
        <% if notification.subject.task.staff.icon.attached? %>
          <%= image_tag notification.subject.task.staff.icon.variant(resize:'50x50').processed, class: "small_icon" %>
        <% end %>
      </div>
      <div class="col-md-10">
        <small class="text-muted"><%= l notification.created_at, format: :short %></small><br>
        <%= notification.subject.task.staff.name %>さんが<br>
        <%= notification.subject.task.title %>に<br>
        質問しました！
      </div>
    </div>
  </li>
<% end %>
