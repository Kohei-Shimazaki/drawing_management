<% evidences.each_with_index do |evidence, i| %>
  <% if evidence.id.present? %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-2">
          <strong><%= t("activerecord.models.evidence") %><%= i + 1 %>:</strong>
        </div>
        <div class="col-sm-10">
          <div>
            <%= evidence.comment %>
            <% if current_user == task.staff %>
            <span>
              <%= link_to task_evidence_path(evidence.task_id, evidence.id), method: :delete, remote: true, data: { confirm: I18n.t("confirm.destroy")} do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </span>
            <% end %>
          </div>
          <div>
            <% if evidence.content.attached? %>
              <%= link_to evidence.content do %>
                <i class="far fa-file"></i> <%= t("attachment") %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
