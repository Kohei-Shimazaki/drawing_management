<div class="message">
  <li class="list-group-item">
    <div class="row">
      <div class="col-md-2">
        <% if message.user.icon.attached? %>
          <%= image_tag message.user.icon.variant(resize:'50x50').processed %>
        <% end %>
        <p><%= message.user.name %></p>
      </div>
      <div class="col-md-10">
        <small class="text-muted"><%= l message.created_at, format: :short %></small><br>
        <small class="text-muted">既読 <%=message.has_read_users.count %> : <%= message.has_read_users.map{ |user| user.name }.join("/") %></small><br>
        <%= message.content %>
      </div>
    </div>
  </li>
</div>
