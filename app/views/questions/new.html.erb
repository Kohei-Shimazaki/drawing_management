<% if @question.errors.any? %>
  <ul>
    <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @question, local: true) do |form| %>
  <div class="field">
    <%= form.label :title, t("activerecord.attributes.question.title") %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content, t("activerecord.attributes.question.content") %>
    <%= form.text_area :content %>
  </div>
  <div class="field">
    <%= form.label :attachment, t("activerecord.attributes.question.attachment") %>
    <%= form.file_field :attachment %>
  </div>
  <div class="field">
  </div>
  <%= form.submit t("submit") %>
<% end %>
