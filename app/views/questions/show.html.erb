<div class="jumbotron text-center">
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h4><%= @question.title %></h4>
      </div>
      <div class="card-body text-left">
        <%= @question.content %>
        <%= @question.attachment %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <ul class="list-group">
    <% @question.comments.each do |comment| %>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-2">
            <%= comment.user.name %>
          </div>
          <div class="col-sm-10">
            <div>
              <%= comment.content %>
            </div>
            <div>
              <%= comment.attachment %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
