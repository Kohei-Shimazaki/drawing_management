<% references.each_with_index do |reference, i| %>
  <% if reference.id.present? %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-2">
          <strong><%= t("activerecord.models.reference") %><%= i + 1 %>:</strong>
        </div>
        <div class="col-sm-10">
          <div>
            <%= reference.comment %>
            <span><%= link_to t("crud.destroy"), task_reference_path(reference.task_id, reference.id), method: :delete, remote: true,
                      data: { confirm: I18n.t("confirm.destroy")} %></span>
          </div>
          <div>
            <%= reference.content %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
