<% references.each_with_index do |reference, i| %>
  <% if reference.id.present? %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-2">
          <strong><%= t("activerecord.models.reference") %><%= i + 1 %>:</strong>
        </div>
        <div class="col-sm-10">
          <div>
            <%= reference.comment %>
            <span>
              <%= link_to task_reference_path(reference.task_id, reference.id), method: :delete, remote: true, data: { confirm: I18n.t("confirm.destroy")} do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </span>
          </div>
          <div>
            <% if reference.content.attached? %>
              <%= link_to reference.content do %>
                <i class="far fa-file"></i> <%= t("attachment") %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
