<div class="card mt-2">
  <%= form_with(model: [task, reference]) do |form| %>
    <% if reference.errors.any? %>
      <ul>
        <% reference.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="form-group">
      <div class="field">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: "form-control", id: "reference_comment" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.file_field :content, class: "form-control-file" %>
    </div>
    <%= form.submit t("submit"), class: "btn btn-primary", id: "create_reference_btn" %>
  <% end %>
</div>
