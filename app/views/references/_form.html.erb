<%= form_with(model: [task, reference]) do |form| %>
  <% if reference.errors.any? %>
    <ul>
      <% reference.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group row">
    <%= form.label :comment, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.text_area :comment, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :content, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.file_field :content, class: "form-control-file", id: "reference_file" %>
    </div>
  </div>
  <%= form.submit t("submit"), class: "btn btn-primary" %>
<% end %>
